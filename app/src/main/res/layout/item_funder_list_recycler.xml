<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_funder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_funding_funder_name"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/detail_funding_funder_name_txt_size"
        android:layout_marginStart="@dimen/detail_funding_funder_margin_start"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"/>
    <TextView
        android:id="@+id/tv_funder_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_funding_funder_date"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/detail_funding_funder_date_txt_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_funder_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/detail_funding_funder_margin_start"
        android:layout_marginTop="@dimen/detail_funding_funder_date_margin_top"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"/>
    <TextView
        android:id="@+id/tv_funder_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="후원 금액"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/detail_funding_funder_date_txt_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_funder_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/detail_funding_funder_margin_start"
        android:layout_marginTop="@dimen/detail_funding_funder_date_margin_top"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"/>
    <TextView
        android:id="@+id/tv_funder_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_funding_funder_message"
        android:textSize="@dimen/detail_funding_funder_message_txt_size"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_funder_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/detail_funding_funder_margin_start"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>