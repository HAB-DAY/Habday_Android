<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_sky_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/light_sky_blue</item> <!-- status bar white-->
        <item name="android:datePickerStyle">@style/DatePickerSetting</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DatePickerSetting" parent="@android:style/Widget.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorAccent">@color/black</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>
</resources>